{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "noImplicitAny": false,
    "declaration": true,
    "outDir": "lib",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "types": ["@webgpu/types", "node"],
    "lib": ["ESNext"],
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib", "**/*.spec.ts"]
}
